<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-4 bg-white form">
        <h2 class="font-1">Log in</h2>
        <hr>
        <%= render "devise/shared/providers" %>
        <p class="font-3"> or </p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field text">
            <%= f.email_field :email, placeholder: :email, autofocus: true, required: true %>
          </div>

          <div class="field text">
            <%= f.password_field :password, placeholder: :password, autocomplete: "off", required: true %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field", style="margin-top: 8px;">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: 'btn btn-primary outline btn-login btn-block' %>
          </div>

        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
