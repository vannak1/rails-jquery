<div class="container">
  <div class="row">

    <div class="col-md-4 col-md-offset-4 bg-white form">
      <h2>Sign up</h2>
      <hr>
      <%= render "devise/shared/providers" %>
      <p> or </p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field text">
          <%= f.text_field :name, placeholder: "Name", autofocus: true %>
        </div>

        <div class="field text">
          <%= f.email_field :email, placeholder: "Email", autofocus: true %>
        </div>

        <div class="field text">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="field text">
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-block btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
