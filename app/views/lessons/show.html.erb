<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset2">
        <p>
          <strong>Title:</strong>
          <%= @lesson.title %>
        </p>

        <p>
          <strong>Content:</strong>
          <%= raw @lesson.content %>
        </p>

        <p>
          <strong>Locked?:</strong>
          <%= @lesson.locked? %>
        </p>

        <p>
          <strong>Course:</strong>
          <%= @lesson.course %>
        </p>

        <%= link_to 'Edit', edit_lesson_path(@lesson) %> |
        <%= link_to 'Back', lessons_path %>
    </div>
  </div>
</div>
