<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset2">
      <h1>Listing Lessons</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Locked?</th>
            <th>Course</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.title %></td>
              <td><%= lesson.content %></td>
              <td><%= lesson.locked? %></td>
              <td><%= lesson.course %></td>
              <td><%= link_to 'Show', [@course, lesson] %></td>
              <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
              <td><%= link_to 'Destroy', [@course, lesson], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

       <% @lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.title %></td>
          <td><%= link_to 'Show', [@course, lesson] %></td>
          <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
          <td><%= link_to 'Destroy', [@course, lesson], method: :delete %></td>
        </tr>
      <% end %>

      <%= link_to 'New Lesson', new_course_lesson_path(@course) %>
    </div>
  </div>
</div>
