<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset2">
      <h1>Listing Lessons</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Locked?</th>
            <th>Course</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @lessons.each do |lesson| %>
            <tr>
              <td><%= lesson.title %></td>
              <td><%= lesson.content %></td>
              <td><%= lesson.locked? %></td>
              <td><%= lesson.course %></td>
              <td><%= link_to 'Show', [@course, lesson] %></td>
              <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
              <td><%= link_to 'Destroy', [@course, lesson], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

       <% @lessons.each do |lesson| %>
        <tr>
          <td><%= lesson.title %></td>
          <td><%= link_to 'Show', [@course, lesson] %></td>
          <td><%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %></td>
          <td><%= link_to 'Destroy', [@course, lesson], method: :delete %></td>
        </tr>
      <% end %>


    </div>
  </div>
</div>

<div class="container">
  <% if current_user.admin? %>
    <h4><%= link_to 'New Lesson', new_course_lesson_path(@course) %></h4>
  <% end %>
</div>

<% @lessons.each do |lesson| %>
  <div class="container" style="padding-top: 10px;">
    <div class="row">
      <!-- begin course panels -->
      <div class="col-md-9 bg-white">
        <div class="media">
          <div class="media-left">
            <%= image_tag("badge") %>
          </div>
          <div class="media-body">
            <h4 class="media-heading"><%= course.title %></h4>
            <p><%= course.description %><p>
              <%= link_to 'Show', [@course, lesson] %>
              <% if current_user.admin? %>
                | <%= link_to 'Edit', edit_course_lesson_path(@course, lesson) %> |
                <%= link_to 'Destroy', [@course, lesson], method: :delete %>
              <% end %>
          </div>
        </div>
      </div>
      <!-- end course panels -->
    </div>
  </div>
<% end %>
